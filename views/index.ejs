<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= data.judul %> - EJS Engine</title>
  <link href="/css/style.css" rel="stylesheet">
  <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet">
  <link href="//cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet">
  <link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" rel="stylesheet">
  <script src="//stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <!-- Other -->
  <link href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.3/animate.min.css" rel="stylesheet">
  <!-- Notify.js -->
  <script src='//cdnjs.cloudflare.com/ajax/libs/mouse0270-bootstrap-notify/3.1.5/bootstrap-notify.min.js'></script>
  <!-- DatePicker -->
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css"> 
  <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
  <!-- DataTables -->
  <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
  <script src="//cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
  <script src="//cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>
  <script src="//editor.datatables.net/extensions/Editor/js/dataTables.editor.min.js"></script>
  <script src="/js/async.js"></script>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-12">
          <p class="custom"><span style="color:#007BFF;font-size:40px;font-weight:bold;"><%= data.judul %></span></p>
          <div class="btn btn-primary btn-xs" data-toggle="modal" data-target="#mdlTambahData"><i class="fa fa-plus-square" aria-hidden="true"></i> Tambah Data</div>
            <table id="databuku" class="table table-condensed table-hover" style="width:100%">
                <thead align="center">
                    <tr>
                        <th>ID</th>
                        <th>NAMA BUKU</th>
                        <th>PENULIS</th>
                        <th>TANGGAL RILIS</th>
                        <th>AKSI</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- The Modal mdlTambahData -->
<div class="modal fade" id="mdlTambahData">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">TAMBAH DATA</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
            <div class="row">
                <div class="col-sm-12">
                <form role="form" name="formTambahBuku" onsubmit="funcInputBuku()" method="POST" autocomplete="off">
                        <div class="form-group row">
                                <label class="col-sm-4 form-control-label">Nama Buku
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" name="namaBuku" id="namaBuku" class="form-control form-control-label" required="required" maxlength="60" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 form-control-label">Penulis
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" name="namaPenulis" id="namaPenulis" class="form-control form-control-label" required="required" maxlength="60" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 form-control-label">Tgl Rilis
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" name="tglPembuatan" id="tglPembuatan" class="form-control form-control-label" required="required" maxlength="10" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
                        <button id="submitForm" type="submit" class="btn btn-primary"><i class="fa fa-save" aria-hidden="true"></i>  Simpan Data</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- end Modal mdlTambahData -->
<!-- The Modal mdlUbahData -->
<div class="modal fade" id="mdlUbahData">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">UBAH DATA</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
            <div class="row">
                <div class="col-sm-12">
                <form role="form" name="formUbahData" onsubmit="funcUpdateData()" method="POST" autocomplete="off">
                        <div class="form-group row">
                                <label class="col-sm-4 form-control-label">Nama Buku
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" name="mdlnamaBuku" id="mdlnamaBuku" class="form-control form-control-label" required="required" maxlength="60" value="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 form-control-label">Penulis
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" name="mdlnamaPenulis" id="mdlnamaPenulis" class="form-control form-control-label" required="required" maxlength="60" />
                                </div>
                            </div>
                            <!-- <div class="form-group row">
                                <label class="col-sm-4 form-control-label">Tgl Rilis
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" name="tglPembuatan" id="tglPembuatan" class="form-control form-control-label" required="required" maxlength="10" />
                                </div>
                            </div> -->
                            <input type="hidden" name="mdlidbuku" id="mdlidbuku" class="form-control form-control-label" required="required" maxlength="60" value="" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
                        <button id="submitForm" type="submit" class="btn btn-primary"><i class="fa fa-save" aria-hidden="true"></i>  Simpan Data</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- end Modal mdlUbahData -->
</body>
</html>